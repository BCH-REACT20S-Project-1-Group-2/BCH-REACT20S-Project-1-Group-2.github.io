{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "category.schema.json",
    "title": "Category",
    "description": "Schema for category objects",
    "type": "object",
    "properties": {
        "categoryId": {
            "description": "Unique identifier for a category item",
            "type": "integer",
            "minimum": 0
        },
        "categoryName": {
            "description": "Display name of a category item",
            "type": "string"
        }
    },
    "required": ["categoryId", "categoryName"],
    "additionalProperties": false
}